bin_ecore_win_ecore_win_convert_LDADD = @USE_ECORE_WIN_LIBS@
bin_ecore_win_ecore_win_convert_DEPENDENCIES = @USE_ECORE_WIN_INTERNAL_LIBS@

bin_ecore_win_ecore_win_svg_SOURCES = bin/ecore_win/ecore_win_svg.c
bin_ecore_win_ecore_win_svg_CPPFLAGS = -I$(top_builddir)/src/lib/efl @ECORE_WIN_CFLAGS@
bin_ecore_win_ecore_win_svg_LDADD = @USE_ECORE_WIN_LIBS@
bin_ecore_win_ecore_win_svg_DEPENDENCIES = @USE_ECORE_WIN_INTERNAL_LIBS@

bin_ecore_win_eetpack_SOURCES = bin/ecore_win/eetpack.c
